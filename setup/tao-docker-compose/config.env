# TAO Docker Compose Configuration
# =================================

# Deployment Settings
AIRGAPPED_MODE=false
DEPLOYMENT_MODE=PROD
USE_ADMIN_KEY=true
PTM_PULL=true

# Python Version Settings
PYTHON_VERSION=3.12
PYTHON_BASE_PATH=/opt/venv/cosmos_rl/lib/python

# Image Settings
IMAGE_TAO_API=nvcr.io/nvstaging/tao/cosmos_rl_ram_dev:latest
IMAGE_TAO_PYTORCH=nvcr.io/nvstaging/tao/tao-toolkit-pyt_2507_86:latest
IMAGE_TAO_DEPLOY=nvcr.io/nvstaging/tao/tao-toolkit_5.2.0-deploy_2507_86:latest
IMAGE_VILA=nvcr.io/ea-tlt/tao_ea/vila_fine_tuning_inf:latest
IMAGE_TAO_DS=nvcr.io/nvstaging/tao/tao-toolkit-ds_v5.2.0_2507_86:latest
IMAGE_COSMOS_RL=nvcr.io/nvstaging/tao/cosmos_rl_ram_dev:latest

# GPU Settings
NUM_GPU_PER_NODE=2
MAX_GPU_PER_USER_REALTIME_INFER=1

# Network Settings
CALLBACK_UUID=5f931ba3-d448-54fe-955c-a63795b01c98
HOSTBASEURL=http://tao_api_app:8000
NGINX_HTTP_PORT=8090
NGINX_HTTPS_PORT=8443

# SeaweedFS Settings (local storage - independent of internet access)
SEAWEEDFS_ENABLED=true
SEAWEEDFS_REPLICATION=000
LOCAL_MODEL_REGISTRY=/shared-storage/models